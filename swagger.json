{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Boilerplate Swagger",
    "description": "RESTful API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "description": "User login",
        "parameters": [
          {
            "name": "username",
            "in": "body",
            "description": "User's username",
            "required": true,
            "schema": {
              "required": [
                "username",
                "password"
              ],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    }
  }
}
